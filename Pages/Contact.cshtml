@page
@{
    ViewData["Title"] = "Contact";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true">
}


<h1>Contact</h1>
<hr />

<form id="contact-form" class="needs-validation" novalidate>
    <input type="text" name="_honey" id="_honey" placeholder="" title="_honey">

    <div id="form-name" class="form-group">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" title="Name" autocomplete="off" />
    </div>

    <div id="form-email" class="form-group">
        <label for="Email" class="form-label">Email <span>*</span></label>
        <input type="email" class="form-control" id="Email" title="Email" autocomplete="on" required/>
        <div class="invalid-feedback">
            Please enter a valid email address
        </div>
    </div>

    <div id="form-message" class="form-group">
        <label for="Message" class="form-label">Message <span>*</span></label>
        <textarea class="form-control" id="Message" title="Message" rows="5" required></textarea>
        <div class="invalid-feedback">
            Please enter a message
        </div>
    </div>

    <div id="form-consent" class="form-check form-group">
        <label for="Consent" class="form-check-label">
            Agree to <a href="#" data-bs-toggle="modal" data-bs-target="#terms">terms and conditions</a>.
        </label>
        <input type="checkbox" class="form-check-input" id="Consent" required>
        <div class="invalid-feedback">
            You must agree before submitting.
        </div>
    </div>

    <!-- Modal -->
    <div class="modal" id="terms">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Terms and Conditions</h5>
                </div>
                <div class="modal-body">
                    <ol>
                        <li>
                            <h6>Introduction</h6>
                            <p>
                                By using the contact form on this website, you agree to comply with and be bound by the following terms and conditions. If you disagree with any part of these terms and conditions, please refrain from using the contact form.
                            </p>
                        </li>

                        <li>
                            <h6>Data Collection and Usage</h6>
                            <p>
                                The contact form provided on this website collects personal information, including but not limited to your name and email address. This information is collected solely for the purpose of responding to your inquiries and providing relevant information.
                            </p>
                        </li>

                        <li>
                            <h6>Use of Form Submit</h6>
                            <p>
                                This website utilizes <a href="https://formsubmit.co/" target="_blank">Form Submit</a> as a method for receiving and processing contact form submissions. Form Submit is a third-party service that facilitates the secure transmission and handling of data. By submitting the contact form, you acknowledge and agree to the terms and conditions of Form Submit.
                            </p>
                        </li>

                        <li>
                            <h6>Information Security</h6>
                            <p>
                                We take appropriate measures to ensure the security of the information you provide through the contact form. However, please be aware that no method of transmission over the internet or electronic storage is entirely secure, and we cannot guarantee the absolute security of your data.
                            </p>
                        </li>

                        <li>
                            <h6>Usage of Contact Information</h6>
                            <p>
                                The information collected through the contact form will only be used for the purpose of communication between the website owner and the user. Your information will not be shared, sold, or rented to third parties without your explicit consent.
                            </p>
                        </li>

                        <li>
                            <h6>Modification of Terms</h6>
                            <p>
                                We reserve the right to modify these terms and conditions at any time. It is your responsibility to review this page periodically for changes. By continuing to use the contact form after any modifications, you agree to be bound by the updated terms and conditions.
                            </p>
                        </li>
                    </ol>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn">Submit</button>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/contact.js" asp-append-version="true"></script>
}