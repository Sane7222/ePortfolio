                    </a>
                </li>
            </ul>
            <p>&copy; @DateTime.Now.Year Matias Moseley. All rights reserved.</p>
            <p>Powered by .NET @Environment.Version</p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
